<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_reservation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table Reservation"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tv_title"
                app:layout_constraintEnd_toEndOf="parent" />


            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/tv_restaurant_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant:"
                android:textColor="#666"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tv_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taste Havens"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tv_restaurant_label"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/tv_guest_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="#666"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_restaurant_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tv_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tv_guest_label"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/tv_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date / Time:"
                android:textColor="#666"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_guest_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May 15, 2025 - 7:30 PM"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tv_date_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Table Number -->
            <TextView
                android:id="@+id/tv_table_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table No:"
                android:textColor="#666"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_date_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tv_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A12"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tv_table_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_guests_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guests:"
                android:textColor="#666"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_table_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tv_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 People"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tv_guests_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_reason_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason:"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_guests_label"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="176dp"
                android:layout_height="21dp"
                android:gravity="right"
                android:text="Birthday Dinner"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/tv_reason_label"
                app:layout_constraintTop_toTopOf="@id/tv_reason_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created:"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_label"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="May 10, 2025 - 4:15 PM"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reason_label"
                app:layout_constraintTop_toTopOf="@id/tv_reason_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="@id/card_reservation"
        app:layout_constraintTop_toTopOf="@id/card_reservation"
        app:layout_constraintBottom_toBottomOf="@id/card_reservation"
        android:translationX="-16dp" />


    <View
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_background"
        app:layout_constraintEnd_toEndOf="@id/card_reservation"
        app:layout_constraintTop_toTopOf="@id/card_reservation"
        app:layout_constraintBottom_toBottomOf="@id/card_reservation"
        android:translationX="16dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>